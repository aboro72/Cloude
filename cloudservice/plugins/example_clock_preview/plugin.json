{
  "name": "Analog Clock Preview",
  "slug": "clock-preview",
  "version": "1.0.0",
  "author": "CloudService Team",
  "description": "Displays an animated analog clock for .plug file preview. Perfect for testing the plugin system.",

  "django_app": {
    "app_config": "clock_preview.apps.ClockPreviewConfig"
  },

  "requirements": {
    "django": ">=5.0,<6.0",
    "python": ">=3.10",
    "python_packages": []
  },

  "position": "center",

  "hooks": {
    "file_preview_provider": {
      "handler": "clock_preview.handlers.ClockPreviewProvider",
      "priority": 10,
      "plugin_type": "file_preview",
      "mime_types": ["application/plugin"]
    }
  }
}
